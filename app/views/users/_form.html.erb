<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :patronymic, style: "display: block" %>
    <%= form.text_field :patronymic %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :age, style: "display: block" %>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.label :country, style: "display: block" %>
    <%= form.text_field :country %>
  </div>

  <div>
    <%= form.label :gender, style: "display: block" %>
    <%= form.select :gender, [['male', 'male'], ['female', 'female']],
                            { },
                            { } %>
  </div>

  <div>
    <%= form.label :surname, style: "display: block" %>
    <%= form.text_field :surname %>
  </div>

  <div>
    <%= form.label :nationality, style: "display: block" %>
    <%= form.text_field :nationality %>
  </div>

  <div>
    <%= form.label :interests, "Interests" %>
    <%= form.select :interests, options_from_collection_for_select(Interest.all, :name, :name),
                            { },
                            { include_blank: true, multiple: true, size: 5, class: 'form-control' } %>
  </div>

  <div>
    <%= form.label :skills, "Skills" %>
    <%= form.select :skills, options_from_collection_for_select(Skill.all, :name, :name),
                            { },
                            { include_blank: true, multiple: true, size: 5, class: 'form-control' } %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
